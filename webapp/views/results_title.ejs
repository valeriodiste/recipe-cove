<!DOCTYPE html>
<html lang="en">
<head>
<% if (info!=""){ 
    var title= info.title %>
    <link rel="stylesheet" href="css/style.css" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=title%></title>
</head>
<body>
    <div class="my-navbar">
        <h3>
            Recipe Cove
        </h3>
        <div class="my-navbar-menÃ¹">
            <a href="/">Home</a>
            <%if (connected==true){%>
                <a href="profile">Profile</a>
                <form action='logout'>
                    <button>LOGOUT</button>
                </form> 
            <%}else{%>
                <div style="display:none">><a href="profile">Profile</a></div>
                <form action='login'>
                    <button>LOGIN</button>
                </form> 
            <%}%>
        </div>
    </div>

    <div class="main">
        <div class="main-box-details soft-shadow">
            <br>
            <h1 class="text-center"><%= info.title%></h1>
            <br>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="container">
                            <div class="row text-center">
                              <div class="col"><img src="<%= info.image%>"></div>
                            </div>
                            <br>
                            <div class="row text-center">
                              <div class="col">
                                <%if (id_utente!=undefined){%>
                                    <% if (added_to_favorites==false){ %>
                                        <button class="heart-button" id="heart-button" onclick='manageDB("<%=id_utente%>", "<%=title%>")'>Add to favorites <i class='fa fa-heart-o'></i></button>
                                    <%} else{%>
                                        <button class="heart-button" id="heart-button" onclick='manageDB("<%=id_utente%>", "<%=title%>")'>Remove from favorites <i class='bi bi-trash3'></i></button>
                                    <%} %>
                                    <br>
                                    <%if (info_p.calendar!=""){%>
                                        <a href="https://localhost:3001/add_event?id=<%=id_utente%>&google_token=<%=google_token%>&title=<%=title%>&connected=<%=connected%>"><button class="calendar-button">Add to Calendar <i class="bi bi-calendar-plus"></i></button></a>
                                    <%} else { %>
                                        <button disabled class="calendar-button">Add to Calendar <i class="bi bi-calendar-plus"></i></button>
                                    <% } %>
                                <% } else{%>
                                    <button disabled class="heart-button" id="heart-button-d">Add to favorites <i class='fa fa-heart-o'></i></button>
                                    <br>
                                    <button disabled class="calendar-button">Add to Calendar <i class="bi bi-calendar-plus"></i></button>
                                <%}%>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col text-left">
                        <table>
                            <tr>
                                <td>
                                    <h4>Health Score: </h4><p><%= info.healthScore%></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <%= info.pricePerServing%> <p>per serving </p>  
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <br>
                                    <h4>Ingredients: </h4>
                                    <% if(info.extendedIngredients.length>0){ %>
                                        <% for(var i=0;i < info.extendedIngredients.length; i++) {%>
                                            <div class="recipe-external-card">
                                                <a href="https://localhost:3000/results_ingredient?id=<%= info.extendedIngredients[i].id%>" style='text-decoration: none;'>
                                                    <button class="recipe-internal-card soft-shadow">
                                                        <img class="immagine" src="https://spoonacular.com/cdn/ingredients_100x100/<%= info.extendedIngredients[i].image%>">
                                                        <br><br>
                                                        <%= info.extendedIngredients[i].name%>
                                                    </button>
                                                </a>
                                            </div>
                                        <%}%>
                                    <%}%>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <br>
                                    <h4>Recipe Description: </h4>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <% if(info.summary!="") {%>
                                        <p><%- info.summary%></p>
                                    <% } else{%>
                                        <p>No description for this recipe...</p>
                                    <%}%>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <br>
                                    <h4>Recipe Instructions: </h4>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <% if(info.instructions!="") {%>
                                        <p><%- info.instructions%></p>
                                    <% } else{%>
                                        <p>No instructions for this recipe...</p>
                                    <%}%>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <br>
        </div>
    </div>
    <script type="text/javascript">
        function manageDB(id_utente,title){
            var e= document.getElementById("heart-button");
            if (e.innerHTML=='Add to favorites <i class="fa fa-heart-o"></i>'){
                addFavorites(id_utente, title);
            }
            else{
                removeFavorites(id_utente, title);
            }
        };

        function removeFavorites(id_utente, title){
            var xhttp = new XMLHttpRequest();
            var body={"title": title};
            xhttp.onreadystatechange = function(){
                if (this.readyState == 4 && this.status == 200){
                    if (this.responseText == "true"){
                        alert("Recipe removed from favorites!");
                        updateButton(); 
                    }else{
                        alert("Unable to remove the recipe");
                    }
                }
                console.log("Status: "+ this.readyState + " Status: "+ this.status);
                console.log(this.responseText);
            };
            xhttp.open("POST", '/removeFavorites?id='+id_utente.toString()+"&title="+ title, true);
            xhttp.send(JSON.stringify(body));
        }

        function addFavorites(id_utente, title){
            var xhttp = new XMLHttpRequest();
            var body={"title": title};
            xhttp.onreadystatechange = function(){
                if (this.readyState == 4 && this.status == 200){
                    if (this.responseText == "true"){
                        alert("Recipe added to favorites!");
                        updateButton(); 
                    }else{
                        alert("Unable to add the recipe to your favorites");
                    }
                }
                console.log("Status: "+ this.readyState + " Status: "+ this.status);
                console.log(this.responseText);
            };
            xhttp.open("POST", '/addFavorites?id='+id_utente.toString()+"&title="+ title, true);
            xhttp.send(JSON.stringify(body));
        }


        function updateButton(){
            var e= document.getElementById("heart-button");
            if (e.innerHTML=='Add to favorites <i class="fa fa-heart-o"></i>'){
                e.innerHTML='Remove from favorites <i class="bi bi-trash3"></i>';
            }
            else{
                e.innerHTML='Add to favorites <i class="fa fa-heart-o"></i>'
            }
        }
    </script>
</body>
<%}%>
</html>
